<?xml version="1.0"?>
<block>
  <name>Period_Pulse_detection</name>
  <key>radio_astro_Period_Pulse_detection</key>
  <category>[radio_astro]</category>
  <import>import radio_astro</import>
  <make>radio_astro.Period_Pulse_detection($nt, $dms,  $period, $iter, $s_pos, $t_int)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>nt</name>
    <key>nt</key>
    <type>int</type>
  </param>

  <param>
    <name>dms</name>
    <key>dms</key>
    <type>float_vector</type>
  </param>

  <param>
    <name>period</name>
    <key>period</key>
    <type>float</type>
  </param>

  <param>
    <name>iterations</name>
    <key>iter</key>
    <type>int</type>
  </param>

  <param>
    <name>start_position</name>
    <key>s_pos</key>
    <type>int</type>
  </param>

  <param>
    <name>time_step</name>
    <key>t_int</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in0</name>
    <type>float</type>
    <vlen>len($dms)*$nt</vlen>
  </sink>
  
  
  <sink>
    <name>in1</name>
    <type>float</type>
    <vlen>len($dms)*$nt</vlen>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type><!-- e.g. int, float, complex, byte, short, xxx_vector, ...--></type>
  </source>
</block>
